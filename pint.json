{
    "preset": "laravel",
    "rules": {
        "binary_operator_spaces": {
            "default": "align_single_space_minimal"
        },
        "class_attributes_separation": {
            "elements": {
                "method": "one"
            }
        },
        "concat_space": {
            "spacing": "one"
        },
        "no_leading_import_slash": true,
        "no_space_around_double_colon": false
    },
    "exclude": ["Views/"]
}
